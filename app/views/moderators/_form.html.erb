<%= form_with(model: moderator) do |form| %>
  <% if moderator.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(moderator.errors.count, "error") %> prohibited this moderator from being saved:</h2>

      <ul>
        <% moderator.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mb-3">
    <%= form.text_field :title, id: "title", class: "form-control", placeholder: "title" %>
    <label for="title">Title of this user (Super user view only)</label>
  </div>

  <div class="form-group mb-3">
    <label for="description">Description of this user (Super user view only)</label>
    <%= form.text_area :description, rows: 15, id: "description", class: "form-control", placeholder: "description" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :email, id: "email", class: "form-control", placeholder: "email" %>
    <label for="email">Email of this user (Super user can change user's email)</label>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :first_name, id: "first_name", class: "form-control", placeholder: "first_name" %>
    <label for="first_name">First name of this user (Super user can change user's first name)</label>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :last_name, id: "last_name", class: "form-control", placeholder: "last_name" %>
    <label for="last_name">Last name of this user (Super user can change user's last name)</label>
  </div>

  <div class="bg-light border rounded px-5 py-2 mt-3">
    <%= form.label "Referee (A person to mediate content)", style: "display: block" %>
    <%= form.check_box :referee %>
  </div>

  <div class="bg-light border rounded px-5 py-2 mt-3">
    <%= form.label "Contributor (A person to contribute to alt text, image uploads and other community sharing)", style: "display: block" %>
    <%= form.check_box :contributor %>
  </div>

  <div class="bg-light border rounded px-5 py-2 my-3">
    <%= form.label "Flag (To stop a person or not)", style: "display: block" %>
    <%= form.check_box :flag %>
  </div>

  <div>
    <%= form.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
