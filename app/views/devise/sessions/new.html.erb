<main class="container-fluid bg-light vh-100" aria-label="Alt Text Sign Up Form">
  <section class="py-5 container">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="card p-5 col-xl-6 offset-xl-3 col-12">
            <h2>Log in</h2>
            <div class="form-floating mt-1">
              <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Username", class: "form-control", id: "username" %>
              <label for="username" class="text-secondary">Username<span class="">*</span></label>
            </div>
            <div class="mt-2">
              <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != "registrations" %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "fw-bold" %>
              <% end %>
            </div>
            <div class="form-floating mt-1">
              <%= f.password_field :password, id: "password", autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
              <label for="password" class="text-secondary">Password <span class="">*</span></label>
            </div>
            <div class="actions">
              <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary mt-3" %>
            </div>
          </div>
        <% end %>
        <div class="p-5 col-xl-6 offset-xl-3 col-12">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </section>
</main>
