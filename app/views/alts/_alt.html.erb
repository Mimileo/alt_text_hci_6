
  <div id="<%= dom_id alt %>" class="card p-3">
    <h3><%= alt.title %></h3>
    <%= link_to alt do %>
        <%= image_tag alt.image_url(:small), class: "image", caption: alt.title, alt: alt.alt_texts.pluck(:body).last, class: "img-fluid", height: alt.image(:small).height, width: alt.image(:small).width %>
       <turbo-frame id="<%= dom_id(alt) %>" loading="lazy" src="<%= alts_path %>">
          <%= render('common/spinner') %>
      </turbo-frame>
  
    <% end %>    
    <%= alt.user.first_name if alt.user.first_name.present? %>
    <%= link_to "View image", alt, "aria-label": alt.title + "image" %>
  </div>
 
