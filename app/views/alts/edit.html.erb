
<main id="edit_image">
  <% if @alt.check_performed != true %>
    <div class="container-fluid bg-light">
      <div class="container py-5">
          <h1>Checking for duplicates. Page will refresh every 5 seconds.</h1>

        <div class="row duplicate_checking">
          <div class="col-md-12 bg-white border rounded p-5 mx-auto">
            <% if @alt.image_url.present? %>
              <div class="col-md-6 d-md-none d-sm-block">
                <%= image_tag @alt.image_url(:small), class: "image-fluid w-100 mb-5" %>
              </div>
            <% end %>
            <br>
            <div>
              <%= link_to "Back", alts_path %>
            </div>
          </div>
          <% if @alt.image_url.present? %>
            <div class="col-md-6 d-none d-md-block">
              <%= image_tag @alt.image_url(:small), class: "image-fluid w-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="container-fluid bg-light not_duplicate">
      <div class="container py-5">
        <div class="row">
          <div class="col-md-6 bg-white border rounded p-5 mx-auto">
            <% if @alt.image_url.present? %>
              <div class="col-md-6 d-md-none d-sm-block">
                <%= image_tag @alt.image_url(:small), class: "image-fluid w-100 mb-5" %>
              </div>
            <% end %>

            <%= render "form", alt: @alt %>
            <br>
            <div>
              <%= link_to "Back", alts_path %>
            </div>
          </div>
          <% if @alt.image_url.present? %>
            <div class="col-md-6 d-none d-md-block">
              <%= image_tag @alt.image_url(:small), class: "image-fluid w-100" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</main>